<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tukorea.ciwa.mapper.FileMapper">
	<select id="selectAllByuserid"
		resultType="com.tukorea.ciwa.domain.FileVO">
		select *
		from file_table
		where userid = #{userid}
	</select>

	<insert id="insert">
		insert into file_table (title, userid, type,
		modifyDate)
		values (#{title}, #{userid}, #{type}, #{modifyDate})
	</insert>

	<select id="selectBytitle" resultType="com.tukorea.ciwa.domain.FileVO">
		select *
		from file_table
		where title = #{title}
	</select>
</mapper>